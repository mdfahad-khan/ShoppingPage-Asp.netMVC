
@model List<ShoppingPage.EF.Product>


@{
    ViewBag.Title = "ShowSelectedProduct";
}

<h2>Selected Products</h2>

<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Product Price</th>
        <th>Category</th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.ProductPrice</td>
            <td>@product.CategoryId</td>
        </tr>
    }
</table>

@* Add a button to go back to the product selection page *@
<a href="@Url.Action("Order", "Product")" class="btn btn-primary">Back to Product Selection</a>
<a href="@Url.Action("Customer", "Product")" class="btn btn-primary">Back to Product Selection</a>
